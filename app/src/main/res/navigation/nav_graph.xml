<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.doilikeithere.FirstFragment"
        android:label="@string/fragment_title_main_page"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.doilikeithere.SecondFragment"
        android:label="@string/fragment_title_review_place"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_selectionFragment"
            app:destination="@id/SelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/SelectionFragment"
        android:name="com.example.doilikeithere.SelectionFragment"
        android:label="@string/fragment_title_make_selections"
        tools:layout="@layout/fragment_selection">
        <action
            android:id="@+id/action_selectionFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            app:popUpTo="@+id/SecondFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.doilikeithere.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_historyFragment_to_FirstFragment"
            app:destination="@id/FirstFragment"
            app:popUpTo="@+id/FirstFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.doilikeithere.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_FirstFragment"
            app:destination="@id/FirstFragment"
            app:popUpTo="@+id/FirstFragment"
            app:popUpToInclusive="true"/>
    </fragment>


</navigation>